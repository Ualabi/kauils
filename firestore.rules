rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: user must be signed in
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper: fetch the caller's role from the users collection
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // ── Users ─────────────────────────────────────────────────────────────────
    match /users/{userId} {
      allow read:   if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && request.auth.uid == userId;
    }

    // ── Menu items ────────────────────────────────────────────────────────────
    // Public read; admin can create/update/delete
    match /menuItems/{itemId} {
      allow read:   if true;
      allow write:  if isAuthenticated() && getUserRole() == 'admin';
    }

    // ── Customer orders ────────────────────────────────────────────────────────
    match /orders/{orderId} {
      allow read: if isAuthenticated() && (
        resource.data.customerId == request.auth.uid ||
        getUserRole() == 'staff' ||
        getUserRole() == 'expo'  ||
        getUserRole() == 'admin'
      );
      allow create: if isAuthenticated() && getUserRole() == 'customer';
      allow update: if isAuthenticated() && (
        getUserRole() == 'staff' ||
        getUserRole() == 'expo'  ||
        getUserRole() == 'admin'
      );
      allow delete: if isAuthenticated() && getUserRole() == 'admin';
    }

    // ── Staff tickets (table + to-go orders) ──────────────────────────────────
    match /tickets/{ticketId} {
      allow read:  if isAuthenticated() && (
        getUserRole() == 'staff' ||
        getUserRole() == 'expo'  ||
        getUserRole() == 'admin'
      );
      allow write: if isAuthenticated() && (
        getUserRole() == 'staff' ||
        getUserRole() == 'expo'  ||
        getUserRole() == 'admin'
      );
      allow delete: if isAuthenticated() && getUserRole() == 'admin';
    }

    // ── Tables ────────────────────────────────────────────────────────────────
    match /tables/{tableId} {
      allow read:  if isAuthenticated() && (
        getUserRole() == 'staff' ||
        getUserRole() == 'expo'  ||
        getUserRole() == 'admin'
      );
      allow write: if isAuthenticated() && (
        getUserRole() == 'staff' ||
        getUserRole() == 'expo'  ||
        getUserRole() == 'admin'
      );
    }

    // ── Pickup codes (internal uniqueness tracking) ───────────────────────────
    match /pickupCodes/{code} {
      allow read, write: if isAuthenticated() && (
        getUserRole() == 'customer' ||
        getUserRole() == 'admin'
      );
    }
  }
}
